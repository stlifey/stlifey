# Distributed under the terms of the GNU General Public License v2
# $Header: $

ss="ss-local"
ss_acl="/etc/shadowsocks-chn.acl"
ss_config="/etc/shadowsocks.json"

ss_pidfile="/run/${ss}.pid"
ss_command="/usr/bin/${ss}"

depend() {
    need net
}

checkconfig() {
    if [ ! -f ${ss_config} ]; then
        ewarn "${ss_config} does not exist."
    fi

    return 0
}

start() {
    checkconfig || return 1

    ebegin "Starting Shadowsocks Local"
    start-stop-daemon --start --exec ${ss_command} \
    -- -c ${ss_config} -f ${ss_pidfile} >/dev/null 2>&1 &
    eend $?
}

stop() {
    ebegin "Stopping Shadowsocks Local"
    start-stop-daemon --stop --pidfile ${ss_pidfile}
    eend $?
}

